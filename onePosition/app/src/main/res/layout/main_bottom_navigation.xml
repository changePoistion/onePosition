<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/center_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/icon_radio_center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textMovie"
            style="@style/bottom_navigation_style"
            android:drawableTop="@drawable/icon_movie_pressed"
            android:tag="0"
            android:text="movie"
            />

        <TextView
            android:id="@+id/textHeart"
            style="@style/bottom_navigation_style"
            android:drawableTop="@drawable/icon_heart_pressed"
            android:tag="1"
            android:text="heart"
            />

        <TextView
            android:id="@+id/textRadio"
            style="@style/bottom_navigation_style"
            android:drawableTop="@drawable/icon_radio_pressed"
            android:tag="2"
            />

        <TextView
            android:id="@+id/textOcean"
            style="@style/bottom_navigation_style"
            android:drawableTop="@drawable/icon_ocean_pressed"
            android:tag="3"
            android:text="ocean"
            />

        <TextView
            android:id="@+id/textBalloon"
            style="@style/bottom_navigation_style"
            android:drawableTop="@drawable/icon_balloon_pressed"
            android:tag="4"
            android:text="balloon"
            />
    </LinearLayout>
</RelativeLayout>