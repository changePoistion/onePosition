<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />
            <gradient android:endColor="@color/colorYellow" android:startColor="@color/colorYellow" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />
            <gradient android:endColor="@color/colorGreen" android:startColor="@color/colorGreen" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />
            <gradient android:endColor="@color/colorYellow" android:startColor="@color/colorYellow" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />
            <gradient android:endColor="@color/colorGreen" android:startColor="@color/colorGreen" />
        </shape>
    </item>
</selector>