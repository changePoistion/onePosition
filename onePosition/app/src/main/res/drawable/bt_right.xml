<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_selected="true">
    <shape>
        <corners android:bottomRightRadius="12dp" android:topRightRadius="12dp" />
        <gradient android:endColor="@color/colorWhite" android:startColor="@color/colorWhite" />
    </shape>
</item>
<item android:state_selected="false">
    <shape>
        <corners android:bottomRightRadius="12dp" android:topRightRadius="12dp" />
        <gradient android:endColor="@color/colorBlue" android:startColor="@color/colorBlue" />

    </shape>
</item>
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomRightRadius="12dp" android:topRightRadius="12dp" />
            <gradient android:endColor="@color/colorWhite" android:startColor="@color/colorWhite" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <corners android:bottomRightRadius="12dp" android:topRightRadius="12dp" />
            <gradient android:endColor="@color/colorBlue" android:startColor="@color/colorBlue" />
        </shape>
    </item>

</selector>